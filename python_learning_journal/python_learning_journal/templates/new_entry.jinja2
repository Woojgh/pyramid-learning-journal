{% extends "layout.jinja2" %}
{% block content %}
<form method="POST">
        <table>
                <tr>
                        <td><label for="title">Title:</label></td>
                        <td><input type="text" name="title" value="{{ title }}" placeholder="Enter TItle" required /></td>
                </tr>
                <tr>
                        <td><label for="entry">Entry Body:</label></td>
                        <td>
                                <textarea name="entry" placeholder="Insert Entry" required>
                                {{ entry }}
                                </textarea>
                        </td>
                </tr>
                <tr>
                        <td></td>
                        <td><input type="submit" value="Submit Journal" /></td>
                </tr>
        </table>
</form>
{% endblock %}