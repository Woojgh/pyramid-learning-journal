{% extends "layout.jinja2" %}
{% block content %}
<h1>Edit an Entry</h1>
<form method="POST">
    <ul>
        <li>
            <label for="title">Title: </label>
            <input type="text" name="title" value="{{ title }}" />
        </li>
        <li>
            <label for="entry">Entry: </label>
            <textarea name="entry">
                {{ entry }}
            </textarea>
        </li>
        <li>
            <input type="submit" value="Edit Entry" />
        </li>
    </ul>
</form>
{% endblock %}